<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_marginLeft="@dimen/item_find_leftrightmarin"
        android:layout_marginRight="@dimen/item_find_leftrightmarin"
        android:text="____________________________________________________________"
        android:maxLines="1"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <carteen.edu.seu.com.carteen.DyanamicSection.util.RoundImageView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/item_find_leftrightmarin"
        android:layout_marginRight="@dimen/item_find_leftrightmarin"
        android:id="@+id/find_img"
        android:src="@drawable/src1"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/item_find_leftrightmarin"
        android:id="@+id/find_title"
        android:text="标题标题"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/item_find_leftrightmarin"
        android:layout_marginLeft="@dimen/item_find_leftrightmarin"
        android:id="@+id/find_author"
        android:text="小军"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
