<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:layout_marginTop="@dimen/activity_toolbar_topsize"
    tools:context=".Activity.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:navilayout="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/fragmentlayout_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        navilayout:layout_heightPercent="92%"
        navilayout:layout_widthPercent="100%">
       <!--测试用的imageview-->
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linerlayout_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        navilayout:layout_heightPercent="8%"
        navilayout:layout_widthPercent="100%"
        android:layout_gravity="bottom"
        android:background="#e8ffffff"
        android:orientation="horizontal">


        <ImageButton
            android:contentDescription="@string/app_name"
            android:id="@+id/button_eating"
            android:layout_width="0dp"
            android:padding="7dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn_eating_selector"
            android:scaleType="centerInside"
            android:background="#00000000"
            />

        <ImageButton
            android:contentDescription="@string/app_name"
            android:id="@+id/button_find"
            android:layout_width="0dp"
            android:padding="7dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn_find_selector"
            android:scaleType="centerInside"
            android:background="#00000000"
            />

        <ImageButton
            android:contentDescription="@string/app_name"
            android:id="@+id/button_dynamic"
            android:layout_width="0dp"
            android:padding="7dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn_dynamic_selector"
            android:layout_gravity="top"
            android:scaleType="centerInside"
            android:background="#00000000" />


    </LinearLayout>


</android.support.percent.PercentFrameLayout>
