<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/store_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="6dp">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">

            <carteen.edu.seu.com.carteen.EatingSection.utils.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/head1"
                android:id="@+id/Imav_touxiang"
                android:contentDescription="@string/app_name"/>

            <LinearLayout
                android:layout_toRightOf="@id/Imav_touxiang"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="12dp"
                    android:text="十里开外"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textColor="@color/gray_8f"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:text="43分钟前"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/dynamic_canteen"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:src="@drawable/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/dynamic_type"
                android:layout_toLeftOf="@id/dynamic_canteen"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:src="@drawable/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                />


        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/lost_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:typeface="sans"
        android:text="'追影设计'绥靖创封过"/>
    <carteen.edu.seu.com.carteen.DyanamicSection.util.MyGridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </carteen.edu.seu.com.carteen.DyanamicSection.util.MyGridView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="#060606"
        android:textSize="14sp"
        android:typeface="serif"
        android:maxLines="1"
        android:text="___________________________________________________________________"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/rv_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="#060606"
        android:textSize="14sp"
        android:typeface="serif"
        android:maxLines="1"
        android:text="___________________________________________________________________"/>
</LinearLayout>

</android.support.v7.widget.CardView>




