<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/fenge"
        android:layout_marginLeft="@dimen/item_find_leftrightmarin"
        android:layout_marginRight="@dimen/item_find_leftrightmarin"
        android:text="____________________________________________________________"
        android:maxLines="1"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <carteen.edu.seu.com.carteen.DyanamicSection.util.RoundImageView
           android:layout_marginTop="20dp"
           android:layout_marginLeft="@dimen/item_find_leftrightmarin"
           android:layout_marginRight="@dimen/item_find_leftrightmarin"
           android:id="@+id/find_img"
           android:layout_alignParentRight="true"
           android:layout_width="150dp"
           android:src="@drawable/src1"
           android:scaleType="fitXY"
           android:layout_height="130dp" />
       <LinearLayout
           android:layout_margin="15dp"
           android:layout_width="match_parent"
           android:layout_height="130dp"
           android:orientation="vertical"
           android:layout_toLeftOf="@id/find_img">
           <TextView
               android:layout_marginTop="5dp"
               android:id="@+id/find_title"
               android:text="标题标题标题标题标题标题"
               android:textSize="23sp"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_marginTop="35dp"
               android:id="@+id/find_author"
               android:text="小军"
               android:textSize="14sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>

   </RelativeLayout>
</LinearLayout>
